{
  "documentation_creation": {
    "creation_prevention": {
      "check_existing_first": true,
      "require_justification": true,
      "preferred_update_targets": [
        ".cursor/rules/README.md",
        ".cursor/rules/RULES_ANALYSIS.md",
        "docs/development.md",
        "README.md"
      ]
    },
    "forbidden_file_patterns": {
      "strategy_files": [
        "*strategy*.md",
        "*approach*.md",
        "*methodology*.md"
      ],
      "duplicate_overviews": [
        "*overview*.md",
        "*summary*.md",
        "*guide*.md"
      ],
      "template_files_outside_templates": [
        "*template*.md",
        "*example*.md"
      ]
    },
    "content_ownership": {
      "rules_overview": ".cursor/rules/README.md",
      "rules_analysis": ".cursor/rules/RULES_ANALYSIS.md", 
      "development_guides": "docs/development.md",
      "project_overview": "README.md",
      "decisions_only": "docs/decisions/",
      "templates_only": "docs/templates/"
    },
    "pre_creation_checks": [
      "scan_existing_files_for_similar_content",
      "identify_appropriate_existing_file",
      "suggest_section_addition_instead",
      "require_explicit_justification_for_new_file"
    ],
    "update_workflow": {
      "when_adding_rules_content": "Update .cursor/rules/README.md or RULES_ANALYSIS.md",
      "when_adding_decision_info": "Create ADR in docs/decisions/ and reference from existing docs",
      "when_adding_development_info": "Update docs/development.md",
      "when_adding_project_info": "Update root README.md"
    },
    "validation": {
      "check_for_content_duplication": true,
      "suggest_consolidation": true,
      "flag_unnecessary_files": true,
      "enforce_single_source_principle": true
    }
  }
} 