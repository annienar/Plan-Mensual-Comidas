{
  "decision_documentation": {
    "decision_tracking": {
      "central_decisions_file": "docs/decisions/README.md",
      "decision_format": "ADR",
      "numbering_scheme": "sequential",
      "status_values": ["proposed", "accepted", "implemented", "superseded", "deprecated"],
      "required_fields": [
        "title",
        "date", 
        "status",
        "context",
        "decision",
        "rationale",
        "consequences",
        "affected_components"
      ]
    },
    "documentation_mapping": {
      "single_source_of_truth": {
        "architecture_decisions": "docs/decisions/",
        "api_documentation": "docs/api.md",
        "development_guide": "docs/development.md", 
        "deployment_guide": "docs/deployment.md",
        "llm_integration": "docs/llm-integration.md",
        "directory_structure": "docs/directory-structure.md"
      },
      "cross_references": {
        "auto_link_decisions": true,
        "update_affected_docs": true,
        "maintain_decision_index": true
      }
    },
    "duplication_prevention": {
      "content_deduplication": {
        "identify_duplicate_sections": true,
        "consolidate_overlapping_content": true,
        "use_includes_for_shared_content": true,
        "maintain_single_source": true
      },
      "reference_management": {
        "use_relative_links": true,
        "avoid_copy_paste": true,
        "prefer_cross_references": true,
        "auto_update_links": true
      }
    },
    "update_triggers": {
      "architecture_decisions": {
        "affected_docs": [
          "docs/development.md",
          "docs/directory-structure.md",
          "README.md"
        ],
        "update_sections": [
          "system_architecture",
          "component_overview",
          "integration_points"
        ]
      },
      "recipe_processing_decisions": {
        "affected_docs": [
          "docs/llm-integration.md",
          "docs/api.md",
          "docs/recipe-processing.md"
        ],
        "update_sections": [
          "processing_pipeline",
          "validation_rules",
          "error_handling"
        ]
      },
      "spanish_localization_decisions": {
        "affected_docs": [
          "docs/spanish-guide.md",
          "docs/api.md",
          "docs/development.md"
        ],
        "update_sections": [
          "field_naming",
          "terminology",
          "validation_rules"
        ]
      },
      "performance_decisions": {
        "affected_docs": [
          "docs/performance.md",
          "docs/deployment.md",
          "docs/monitoring.md"
        ],
        "update_sections": [
          "performance_thresholds",
          "monitoring_setup",
          "optimization_strategies"
        ]
      }
    },
    "automation": {
      "auto_update_docs": true,
      "run_automation_script": "python Documentation/tools/run_automation.py",
      "validate_links": true,
      "check_consistency": true,
      "generate_decision_index": true
    },
    "validation": {
      "prevent_orphaned_decisions": true,
      "require_impact_documentation": true,
      "validate_cross_references": true,
      "check_implementation_status": true
    }
  }
} 